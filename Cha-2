input_num = int(input("Please enter a number to check: "))
check = int(input("Please enter a number to divide by: "))

if input_num % 4 == 0:

	print(input_num,"is a multiple of 4")


elif input_num % 2 == 0:

	print("The number you entered is an odd number")
else:

	print("The number you entered is an even number")

if input_num % check == 0:
    print(input_num, "divides evenly by", check)
else:
    print(input_num, "does not divide evenly by", check)	